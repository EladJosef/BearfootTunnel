{
    "name": "Bearfoot Proxy",
    "version": "1.0.0",
    "manifest_version": 3,
    "description": "Your minimal proxy extension.",
    "permissions": [
        "clipboardRead",
        "proxy",
        "storage",
        "tabs",
        "activeTab",
        "webRequest",
        "webRequestBlocking"
    ],
    "background": {
        "service_worker": "scripts/background.js"
    },
    "icons": {
        "128": "icons/extension-icon128x128.png"
    },
    "action": {
        "default_popup": "index.html"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "scripts/content.js"
            ]
        }
    ],
    "web_accessible_resources": [
        {
            "resources": [
            ],
            "matches": [
                "<all_urls>"
            ]
        }
    ]
}